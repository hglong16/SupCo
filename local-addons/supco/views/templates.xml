<odoo>
    <template id="template_name">
        <t t-name="website_user_info">

            <html lang="vi">
                <head>
                    <meta charset="UTF-8"/>
                    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
                    <title>Employee's Information</title>
                    <style>
                        body {
                        font-family: Arial, sans-serif;
                        background-color: #f0f0f0;
                        display: flex;
                        justify-content: center;
                        align-items: center;
                        height: 100vh;
                        margin: 0;
                        }

                        div {
                        background-color: #fff;
                        width: 300px;
                        padding: 20px;
                        border-radius: 10px;
                        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
                        text-align: center;
                        }

                        p {
                        margin: 10px 0;
                        }

                        b {
                        font-weight: bold;
                        }

                        pre {
                        background-color: #f0f0f0;
                        padding: 10px;
                        border-radius: 5px;
                        }

                        .avatar-size {
                        width: 100px;
                        height: 100px;
                        display: block;
                        margin: 10px auto;
                        border-radius: 50%;
                        object-fit: cover;
                        overflow: hidden;
                        }
                    </style>
                </head>
                <body>
                    <div>
                        <t t-if="image_1920">
                            <img t-att-src="'data:image/png;base64,' + image_1920" alt="Employee Avatar"
                                 class="oe_avatar avatar-size"/>
                        </t>
                        <h1>Thông tin nhân viên</h1>
                        <p>
                            <b>Họ và Tên:</b>
                            <t t-esc="name"/>
                        </p>
                        <p>
                            <b>Ngày sinh:</b>
                            <t t-esc="dob"/>
                        </p>
                        <p>
                            <b>CCCD:</b>
                            <t t-esc="national_id"/>
                        </p>
                        <p>
                            <b>Vị trí:</b>
                            <t t-esc="position"/>
                        </p>
                        <p>
                            <b>Phòng ban:</b>
                            <t t-esc="department"/>
                        </p>
                        <p>
                            <b>QR Code:</b>
                        </p>
                        <pre>
                            <t t-esc="qr_code"/>
                        </pre>
                    </div>
                </body>
            </html>

        </t>
    </template>
</odoo>
