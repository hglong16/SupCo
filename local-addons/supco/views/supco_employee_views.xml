<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="supco_res_users_form_inherit" model="ir.ui.view">
            <field name="name">supreme.court.employee.form.view</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_simple_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="replace">
                    <form string="Users">
                        <sheet>
                            <label for="name" string="Full Name"/>
                            <h2>
                                <field name="name" placeholder="Nguyen Van A"/>
                            </h2>
                                <label for="login" string="Email Address"/>
                                <h2>
                                    <field name="login" placeholder="e.g. email@yourcompany.com"/>
                                </h2>
                            <group>
                                <field name="dob" widget="date"/>
                                <field name="national_id"/>
                                <field name="function"/>
                                <field name="department" widget="many2many_tag"/>
                                <field name="custom_url"/>
                            </group>
                        </sheet>
                    </form>
                </xpath>

            </field>
        </record>

        <record id="supco_res_users_tree_inherit" model="ir.ui.view">
            <field name="name">supreme.court.employee.tree.view</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="replace">
                    <tree string="Users">

                        <field name="custom_url"/>

                        <field name="dob"/>
                    </tree>
                </xpath>
            </field>
        </record>

        <record id="action_supreme_court_employee" model="ir.actions.act_window">
            <field name="name">Employee</field>
            <field name="res_model">res.users</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="supco_res_users_tree_inherit"/>
        </record>
        <menuitem id="menu_supco_main" name="SupCo" sequence="10"/>
        <menuitem id="menu_supco_employee" name="Employee" parent="menu_supco_main" action="action_supreme_court_employee" sequence="20"/>
    </data>
</odoo>