<odoo>
    <data>
        <record id="action_supreme_court_letters" model="ir.actions.act_window">
            <field name="name">Introduction Letter</field>
            <field name="res_model">supreme.court.letter</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="seq_supreme_court_letter" model="ir.sequence">
            <field name="name">Supreme Court Letter</field>
            <field name="code">supreme.court.letter</field>
            <field name="padding">5</field>
        </record>

        <record id="view_form_supreme_court_letter" model="ir.ui.view">
            <field name="name">supreme.court.letter.form</field>
            <field name="model">supreme.court.letter</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="Request First Approval" type="object" class="oe_highlight" name="action_request_first_approval" confirm="Xác nhận gửi đơn xin duyệt lần 1" attrs="{'invisible': [('approval_status','!=','draft')]}"/>

                        <t t-esc="approval_status" />

                        <button name="action_first_approval" string="First Approval" type="object" class="oe_highlight" groups="supco.group_first_approval" confirm="Xác nhận phê duyệt lần 1" />

                        <button name="action_reject_first" string="Reject (First Approval)" type="object" class="oe_red" groups="supco.group_first_approval" confirm="Xác nhận không phê duyệt đơn này"/>

                        <button name="action_second_approval" string="Second Approval" type="object" class="oe_highlight" groups="supco.group_second_approval" confirm="Xác nhận phê duyệt lần 2"/>


                        <button name="action_reject_second" string="Reject (Second Approval)" type="object" class="oe_red" groups="supco.group_second_approval" confirm="Xác nhận không phê duyệt đơn này"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="id"/>
                            <field name="display_number"/>
                            <field name="user_ids" widget="many2many_tags"/>
                            <field name="recipient_name"/>
                            <field name="title_position"/>
                            <field name="organization_unit"/>
                            <field name="address"/>
                            <field name="regarding"/>
                            <field name="validity_date"/>
                            <field name="custom_url" widget="url"/>
                            <field name="qr_code" widget='image' class="oe_avatar"/>
                            <field name="approval_status" readonly="1"/>
                            <field name="first_approval_by"/>
                            <field name="second_approval_by"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="view_tree_supreme_court_letter" model="ir.ui.view">
            <field name="name">supreme.court.letter.tree</field>
            <field name="model">supreme.court.letter</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="number"/>
                    <field name="recipient_name"/>
                    <field name="title_position"/>
                    <field name="organization_unit"/>
                    <field name="address"/>
                    <field name="regarding"/>
                    <field name="validity_date"/>
                    <field name="custom_url" widget="url"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>